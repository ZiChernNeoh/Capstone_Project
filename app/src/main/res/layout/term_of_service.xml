<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E9"
    tools:context=".term_of_service">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/medium"
        android:text="Terms of service"
        android:textAlignment="center"
        android:textColor="#343330"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="291dp"
        android:layout_height="209dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/regular"
        android:text="1. To order online, registered customers must first login by keying in their email address followed by their password.\n
2. Mode of payment is strictly INTI students’/employees’ cards.\n
3. All online payments are subject to the Rounding Mechanism implemented by Bank Negara Malaysia.\n
4. The earliest time for orders is 9.00am.\n
5. The last order time for orders is 4.30pm."
        android:textColor="#343330"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>